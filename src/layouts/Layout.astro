---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "exe.dev - Persistent VMs via SSH",
  description = "Start VMs with persistent disks in seconds. The disk persists. You have sudo.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href="https://exe.dev/" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://exe.dev/" />
    <meta property="og:site_name" content="exe.dev" />
    <meta property="og:image" content="https://exe.dev/static/exy.png" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content="https://exe.dev/static/exy.png" />

    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="alternate"
      type="application/atom+xml"
      title="exe.dev blog"
      href="https://blog.exe.dev/atom.xml"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
