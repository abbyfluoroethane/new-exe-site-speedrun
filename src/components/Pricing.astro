---
const plans = [
  {
    name: "Individual",
    price: "$20",
    period: "/month",
    features: [
      "25 VMs",
      "2 CPUs per VM",
      "8 GB RAM",
      "25 GB disk",
      "100 GB data transfer",
      "Shelley AI tokens included",
    ],
  },
  {
    name: "Team",
    price: "$25",
    period: "/month per user",
    highlight: true,
    features: [
      "25 VMs per user",
      "2 CPUs per VM",
      "8 GB RAM",
      "25 GB disk",
      "100 GB data transfer",
      "Admin & user management",
      "SSO",
      "Burstable capacity",
    ],
  },
  {
    name: "Enterprise",
    price: "$30",
    period: "/month per user",
    features: [
      "30 VMs per user",
      "2 CPUs per VM",
      "16 GB RAM",
      "25 GB disk",
      "100 GB data transfer",
      "Admin & user management",
      "SSO",
      "AWS VPC integration",
    ],
  },
];
---

<section class="pricing">
  <h2>Pricing</h2>
  <div class="plans">
    {plans.map((plan) => (
      <div class:list={["plan", { highlight: plan.highlight }]}>
        <h3>{plan.name}</h3>
        <div class="price">
          <span class="amount">{plan.price}</span>
          <span class="period">{plan.period}</span>
        </div>
        <ul>
          {plan.features.map((f) => (
            <li>{f}</li>
          ))}
        </ul>
        <a href="/auth" class="plan-cta">Get started</a>
      </div>
    ))}
  </div>
</section>

<style>
  .pricing {
    padding: 3rem 1.5rem;
    max-width: 56rem;
    margin: 0 auto;
  }

  h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 2rem;
    text-align: center;
  }

  .plans {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .plan {
    padding: 1.5rem;
    border: 1px solid var(--color-card-border);
    border-radius: 0.5rem;
    background: var(--color-card-bg);
    display: flex;
    flex-direction: column;
  }

  .plan.highlight {
    border-color: var(--color-text);
  }

  h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .price {
    margin-bottom: 1.25rem;
  }

  .amount {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .period {
    font-size: 0.8125rem;
    color: var(--color-muted);
  }

  ul {
    list-style: none;
    flex: 1;
    margin-bottom: 1.5rem;
  }

  li {
    font-size: 0.8125rem;
    color: var(--color-body);
    padding: 0.375rem 0;
    border-bottom: 1px solid var(--color-card-border);
  }

  li:last-child {
    border-bottom: none;
  }

  .plan-cta {
    display: block;
    text-align: center;
    padding: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    border: 1px solid var(--color-text);
    border-radius: 0.375rem;
    transition: background 0.2s, color 0.2s;
  }

  .plan-cta:hover {
    background: var(--color-btn-bg);
    color: var(--color-btn-text);
  }

  @media (min-width: 640px) {
    .plans {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 768px) {
    h2 {
      font-size: 1.5rem;
    }
  }
</style>
